<div class="page-header">
  <h3><%= @board.name %></h3>


  <div class="btn-group">
    <a href="/boards" class="btn btn-default">
      <i class="fa fa-chevron-left" aria-hidden="true"></i>
    </a>

    <% if @board.user_id == current_user.id %>
    <a href="/boards/<%= @board.id %>/edit" class="btn btn-default">
      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    </a>
    <a href="/delete_board/<%= @board.id %>" class="btn btn-default" rel="nofollow">
      <i class="fa fa-trash-o" aria-hidden="true"></i>
    </a>
    <% end %>

  </div>
</div>

<link rel="stylesheet" href="/bootstrap-horizon.css">

<div class="row row-horizon">

  <!-- <%= List.where(:board_id => @board.id).count %>
  <%= @board.lists.count %> -->

  <% @board.lists.each do |list| %>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= list.name %></h3>
      </div>

      <div class="panel-body">
        <%= list.cards.each do |card| %>
        <h4><%= card.name %></h4>
        <p>
          <%= card.description %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
