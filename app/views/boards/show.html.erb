<div class="page-header">
  <h3><%= @board.name %></h3>
</div>

<div class="row">
  <div class="col-md-12">


    <div class="btn-group btn-group-justified">
      <a href="/boards" class="btn btn-default">
        Back
      </a>
      <a href="/boards/<%= @board.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_board/<%= @board.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div class="row">

  <% @board.lists.each do |list|  %>
  <div class ="col-md-3 well">
    <h4><%= list.name %></h4>
    <% list.cards.each do |card| %>
    <div class="well">
      <h6><%= card.name %></h6>
      <p><%= card.description %></p>
    </div>
    <% end %>
    <!-- Add New Card Form -->

    <form action="/create_card" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for list_id -->
      <div class="form-group">
        <label for="list_id" class="control-label">
          List
        </label>

        <input type="hidden" id="list_id" name="list_id" placeholder="List" class="form-control" value="<%= list.id %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-success">
        Create Card
      </button>
      or
      <a href="/cards">Cancel</a>
    </form>



  </div>
  <% end %>
</div>
